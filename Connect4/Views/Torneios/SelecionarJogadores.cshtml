@model SelecionarUsuarioViewModel
@{
    ViewData["Title"] = "Selecionar Jogadores";
}

<h2>Selecionar Jogadores: ESCOLHA @Model.QuantidadeJogadores JOGADORES</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SelecionarJogadores">
            <div class="form-group">
                <select multiple
                        asp-for="JogadoresIds"
                        asp-items="@ViewBag.Jogadores"></select>
            </div>
            <input type="submit" value="Save" class="btn btn-default" />
        </form>
    </div>
</div>